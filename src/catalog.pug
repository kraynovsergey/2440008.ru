extends base

block meta
    - var seotitle = 'Каталог конструкций (списком)'
    - var seodescription = ''
    - var seokeywords = ''

block main
    main.main._inner
        .breadcrumbs
            .container
                ul.breadcrumbs__list.list-reset
                    li
                        a(href="#") Главная
                    li Каталог конструкций

        section.section._pt0
            .container
                h1.heading Каталог конструкций

                .catalog
                    .filter
                        button.filter__mobile-btn.btn.btn-reset._light-blue(type="button" data-src="#filter" data-fancybox) Фильтр

                        .filter__content(id="filter")
                            button.filter__close.btn-reset.popup__close(type="button" data-fancybox-close)
                                +sprite('', 18, 18, 'close')

                            form.filter__form(action="#" method="post")
                                fieldset.filter__fieldset
                                    .filter__label 1981 вариант
                                    button.filter__reset.btn.btn-reset(type="reset")
                                        +sprite('', 12, 12, 'close')
                                        | Очистить фильтр

                                fieldset.filter__fieldset
                                    .filter__label Показать:
                                    .filter__templates
                                        a.filter__template._active(href="#") Списком
                                        a.filter__template(href="#") Картой

                                fieldset.filter__fieldset
                                    input.form__input(type="text" name="gid" placeholder="Поиск по GID")
                                    input.form__input(type="text" name="address" placeholder="Поиск по адресу")

                                fieldset.filter__fieldset
                                    .filter__label Тип конструкции
                                    .filter__select-wrap
                                        select.select(name="cunstruction")
                                            option(value="Все" selected) Все
                                            option(value="Тип конструкции") Тип конструкции
                                            option(value="Тип конструкции") Тип конструкции
