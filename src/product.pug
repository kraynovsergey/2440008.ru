block main
    main.main._inner
        .breadcrumbs
            .container
                ul.breadcrumbs__list.list-reset
                    li
                        a(href="#") Главная
                    li
                        a(href="#") Каталог конструкций
                    li Щит 3Х6 Самарская область

        section.section._pt0
            .container
                p.h1.product-page__title.heading._mobile Щит 3Х6 Самарская область

                .product-page__grid
                    .product-page__gallery
                        .swiper(data-swiper-product)
                            .swiper-wrapper
                                .swiper-slide
                                    a.product-page__gallery-link(href="@img/product-page@2x.jpg" data-fancybox="product-gallery")
